<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codes_roots.golden_coupon">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:installLocation="preferExternal"
        android:usesCleartextTraffic="true"
        android:name=".helper.BaseApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.mainactivity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >

        </activity>
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.web_view.WebViewActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >

        </activity>
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.country_activity.CountryActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >


        </activity>
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.auth.RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >
        </activity>
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.splash.SplashScreen"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codes_roots.golden_coupon.presentation.chose_language.LanguageActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            >

        </activity>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="10001" />

<!--        <service-->
<!--            android:name=".helper.MyFirebaseMessagingService">-->
<!--            <intent-filter>-->
<!--                <action android:name="com.google.firebase.MESSAGING_EVENT"/>-->
<!--            </intent-filter>-->
<!--        </service>-->
        <service
            android:name=".helper.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

    </application>

</manifest>