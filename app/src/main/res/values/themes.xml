<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldenCoupon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/cocon_next_arabic</item>

    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cocon_next_arabic</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="tabIconTint">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>
    <style name="LoginTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cocon_next_arabic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>

    </style>
    <style name="BottomNavigationView.Active"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cocon_next_arabic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>


    <style name="Theme.GoldenCoupon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/cocon_next_arabic</item>

    </style>
    <style name="SearchTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/kokn</item>
        <item name="android:textColorHint">@color/darkGray</item>

    </style>
    <style name="BottomNavStyle">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>
    <style name="EnHomeTitles">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>

    </style>
    <style name="HomeTitles">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>

    </style>
    <style name="menuTitles">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="grayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>

    </style>
    <style name="blackText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="redText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>



    </style>

    //// circle shape
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:background">@drawable/circle_bk</item>
        <item name="shapeAppearance">@android:color/transparent</item>
        <item name="android:padding">8dp</item>

    </style>
    <style name="ShapeAppearanceOverlay.DifferentCornerSize" parent="">
        <item name="cornerSize">@dimen/dimen_24</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="LoginTextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="color">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="normalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/hint_gray</item>

    </style>
    <style name="TitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dinnextarabicbold</item>

    </style>
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
</resources>