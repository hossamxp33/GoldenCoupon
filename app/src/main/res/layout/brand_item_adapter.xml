<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="context"
            type="com.codes_roots.golden_coupon.presentation.mainactivity.MainActivity" />

        <variable
            name="data"
            type="com.codes_roots.golden_coupon.entites.brandsmodel.Brand" />

        <variable
            name="listener"
            type="com.codes_roots.golden_coupon.helper.ClickHandler" />

        <import type="android.text.Html"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/coupon_bg"
        android:layout_margin="@dimen/dimen_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->listener.switchToCouponsFragment(data.id,context)}"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="@dimen/dimen_4"
            app:cardCornerRadius="@dimen/dimen_64"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:imageResource="@{data.image}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/brand_name"
            style="@style/redText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@{Html.fromHtml(String.format(data.name))}"
            app:layout_constraintStart_toEndOf="@+id/cardView1"
            app:layout_constraintTop_toTopOf="@+id/cardView1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/coupon_num"
            style="@style/grayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/cardView1"
            app:layout_constraintTop_toBottomOf="@+id/brand_name" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/time_of_use"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:padding="@dimen/dimen_8"
            android:src="@drawable/star_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@android:color/transparent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>